# Backend Environment Variables

# Node environment: development, production, staging
NODE_ENV=development

# Database
DATABASE_URL=postgresql://tixgenius:tixgenius@localhost:5432/tixgenius

# Server
PORT=3001
HOST=0.0.0.0

# Auth
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your-super-secret-cookie-key
SESSION_SECRET=your-super-secret-session-key

# Redis
REDIS_URL=redis://:tixgenius@localhost:6379
REDIS_SESSION_TTL=86400  # 24 hours in seconds
REDIS_CACHE_TTL=3600     # 1 hour in seconds

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100 