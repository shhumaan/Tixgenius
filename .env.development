# Development Environment Variables for TixGenius

# Node environment
NODE_ENV=development

# PostgreSQL
POSTGRES_USER=tixgenius
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=tixgenius_dev
POSTGRES_PORT=5432
DATABASE_URL=postgresql://tixgenius:dev_password@localhost:5432/tixgenius_dev

# Redis
REDIS_PASSWORD=dev_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:dev_redis_password@localhost:6379
REDIS_SESSION_TTL=86400
REDIS_CACHE_TTL=3600

# Backend
BACKEND_PORT=3001
HOST=localhost
JWT_SECRET=dev_jwt_secret_key_for_development_only
JWT_EXPIRES_IN=30d
SESSION_SECRET=dev_session_secret_key_for_development
COOKIE_SECRET=dev_cookie_secret_key_for_development
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=debug
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=1000

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
API_URL=http://localhost:3001
NEXT_PUBLIC_AUTH_COOKIE_NAME=tixgenius_auth
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development tools
ADMINER_PORT=8080
ENABLE_SWAGGER=true
DEBUG=true 